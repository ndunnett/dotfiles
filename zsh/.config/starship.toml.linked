"$schema" = 'https://starship.rs/config-schema.json'

format = """
[](fg:#3B76F0)\
$directory\
$git_branch\
$git_status\
$fill\
$cmd_duration\
\n$character"""

[fill]
symbol = "─"
style = "#666666"

[character]
format = "$symbol "
success_symbol = "[⪢](green)"
error_symbol = "[⪢](red)"

[directory]
style = "fg:#090c0c bg:#3B76F0"
format = "[$path ]($style)"
truncation_length = 3
truncation_symbol = "…/"
truncate_to_repo = false

[git_branch]
format = '[ $branch(:$remote_branch)]($style)'
style = "fg:#1C3A5E bg:#FCF392"

[git_status]
format = "[ $all_status$ahead_behind[](fg:#FCF392)]($style)"
style = "fg:#1C3A5E bg:#FCF392"
ignore_submodules = true


[cmd_duration]
style = "fg:#1C3A5E bg:#FCF392"
format = '[[](fg:#FCF392)$duration[](fg:#FCF392)]($style)'
min_time = 0
